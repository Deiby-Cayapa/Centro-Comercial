    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById("formSubida").addEventListener("submit", function(e) {
        const input = document.getElementById("inputImagen");
        const file = input.files[0];

        if (!file) return;

        const extensionesValidas = ['.jpg', '.jpeg', '.png', '.gif', '.webp'];
        const extension = file.name.toLowerCase().substring(file.name.lastIndexOf('.'));

        const maxSize = 2 * 1024 * 1024; // 2MB

        if (!extensionesValidas.includes(extension)) {
            e.preventDefault();
            Swal.fire({
                icon: 'error',
                title: 'Archivo no vÃ¡lido',
                text: 'Solo se permiten imÃ¡genes: JPG, JPEG, PNG, GIF o WEBP.',
            });
            return;
        }

        if (file.size > maxSize) {
            e.preventDefault();
            Swal.fire({
                icon: 'error',
                title: 'Imagen muy grande',
                text: 'El archivo no debe superar los 2MB.',
            });
            return;
        }
    });

        document.addEventListener("DOMContentLoaded", () => {
            document.querySelector('.close').addEventListener("click", function (){
                cerrar();
            });
            document.getElementById('subir_img').addEventListener("click", function () {
                abrir();
            });
            document.querySelectorAll(".delete-btn").forEach(button => {
                button.addEventListener("click", function (event) {
                    event.preventDefault();

                    const imageName = this.getAttribute("data-image");

                    // Mostrar alerta de confirmaciÃ³n
                    Swal.fire({
                        title: "Â¿EstÃ¡s seguro?",
                        text: "Esta acciÃ³n no se puede deshacer",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#d33",
                        cancelButtonColor: "#3085d6",
                        confirmButtonText: "SÃ­, eliminar"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Enviar peticiÃ³n AJAX para eliminar la imagen
                            fetch("/eliminar-imagen", {
                                method: "POST",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify({ imagen: imageName }) // Enviar como JSON
                            })
                                .then(response => response.json()) // Convertir la respuesta a JSON
                                .then(data => {
                                    if (data.success) {
                                        // Mostrar alerta de Ã©xito y recargar la pÃ¡gina
                                        Swal.fire({
                                            title: "Â¡Eliminado!",
                                            text: "La imagen ha sido eliminada.",
                                            icon: "success",
                                            timer: 2000,
                                            showConfirmButton: false
                                        }).then(() => {
                                            location.reload(); // ðŸ”„ Recargar la pÃ¡gina despuÃ©s de la alerta
                                        });

                                    } else {
                                        Swal.fire("Error", data.message || "No se pudo eliminar la imagen.", "error");
                                    }
                                })
                                .catch(error => {
                                    console.error("Error:", error);
                                    Swal.fire("Error", "OcurriÃ³ un problema al eliminar la imagen.", "error");
                                });
                        }
                    });
                });
            });
            function abrir(){
                document.getElementById("cargar").style.display='flex';
                document.getElementById("subir_img").style.display='none';
            }
            function cerrar(){
                document.getElementById("cargar").style.display='none';
                document.getElementById("subir_img").style.display='flex';
            }
        });
    </script>

