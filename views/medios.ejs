        </form>
        </div>
    </div>
    <br>
    <hr>

    <!-- Mostrar imágenes de la carpeta -->
    <div class="galeria">
        <% images.forEach(image => { %>
            <div style="box-shadow: 0 5px 10px #0000008d;">
                    <img loading="lazy" src="/img/<%= image %>">
                <form action="/eliminar-imagen" method="POST">
                    <input type="hidden" name="imagen" value="<%= image %>">
                    <div style="width: 100%; display: flex; justify-content: center; cursor: pointer;">
                        <button class="delete-btn" data-image="<%= image %>"><strong>Eliminar</strong></button>
                    </div>
                </form>
            </div>
        <% }); %>
    </div>
    <%- include("./template/config.ejs")%>
    
    <!-- Navegación de paginación -->
    <div class="navegacion">
        <button onclick="location.href='/medios?page=1'" <% if (currentPage === 1) { %> disabled <% } %>>«</button>
        <button onclick="location.href='/medios?page=<%= currentPage - 1 %>'" <% if (currentPage === 1) { %> disabled <% } %>>‹</button>
    
        <span style="font-size: 17px;margin-top: 5px;color: #00548e;">Página <%= currentPage %> de <%= totalPages %></span>
    
        <button onclick="location.href='/medios?page=<%= currentPage + 1 %>'" <% if (currentPage === totalPages) { %> disabled <% } %>>›</button>
        <button onclick="location.href='/medios?page=<%= totalPages %>'" <% if (currentPage === totalPages) { %> disabled <% } %>>»</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById("formSubida").addEventListener("submit", function(e) {
        const input = document.getElementById("inputImagen");
        const file = input.files[0];

        if (!file) return;

        const extensionesValidas = ['.jpg', '.jpeg', '.png', '.gif', '.webp'];
        const extension = file.name.toLowerCase().substring(file.name.lastIndexOf('.'));

        const maxSize = 2 * 1024 * 1024; // 2MB

        if (!extensionesValidas.includes(extension)) {
            e.preventDefault();
            Swal.fire({
                icon: 'error',
                title: 'Archivo no válido',
                text: 'Solo se permiten imágenes: JPG, JPEG, PNG, GIF o WEBP.',
            });
            return;
        }

        if (file.size > maxSize) {
            e.preventDefault();
            Swal.fire({
                icon: 'error',
                title: 'Imagen muy grande',
                text: 'El archivo no debe superar los 2MB.',
            });
            return;
        }
    });

        document.addEventListener("DOMContentLoaded", () => {
            document.querySelector('.close').addEventListener("click", function (){
                cerrar();
            });
            document.getElementById('subir_img').addEventListener("click", function () {
                abrir();
            });
            document.querySelectorAll(".delete-btn").forEach(button => {
                button.addEventListener("click", function (event) {
                    event.preventDefault();

                    const imageName = this.getAttribute("data-image");

                    // Mostrar alerta de confirmación
                    Swal.fire({
                        title: "¿Estás seguro?",
                        text: "Esta acción no se puede deshacer",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#d33",
                        cancelButtonColor: "#3085d6",
                        confirmButtonText: "Sí, eliminar"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Enviar petición AJAX para eliminar la imagen
                            fetch("/eliminar-imagen", {
                                method: "POST",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify({ imagen: imageName }) // Enviar como JSON
                            })
                                .then(response => response.json()) // Convertir la respuesta a JSON
                                .then(data => {
                                    if (data.success) {
                                        // Mostrar alerta de éxito y recargar la página
                                        Swal.fire({
                                            title: "¡Eliminado!",
                                            text: "La imagen ha sido eliminada.",
                                            icon: "success",
                                            timer: 2000,
                                            showConfirmButton: false
                                        }).then(() => {
                                            location.reload(); // 🔄 Recargar la página después de la alerta
                                        });

                                    } else {
                                        Swal.fire("Error", data.message || "No se pudo eliminar la imagen.", "error");
                                    }
                                })
                                .catch(error => {
                                    console.error("Error:", error);
                                    Swal.fire("Error", "Ocurrió un problema al eliminar la imagen.", "error");
                                });
                        }
                    });
                });
            });
            function abrir(){
                document.getElementById("cargar").style.display='flex';
                document.getElementById("subir_img").style.display='none';
            }
            function cerrar(){
                document.getElementById("cargar").style.display='none';
                document.getElementById("subir_img").style.display='flex';
            }
        });
    </script>

<%- include("./template/footer.ejs")%>
    
</body>

</html>